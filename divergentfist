-- ==========================================
-- DIVERGENT FIST (BALANCED HITBOX FLING)
-- ==========================================
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local camera = workspace.CurrentCamera

local tool = Instance.new("Tool")
tool.Name = "Divergent Fist"
tool.RequiresHandle = false
tool.Parent = player:WaitForChild("Backpack")

local isEquipped, canAttack = false, true
local lockedTarget = nil

-- [MESAFE KONTROLÜ VE HEDEF BULMA]
local function findTarget()
    local closest, dist = nil, 60 
    for _, p in pairs(Players:GetPlayers()) do
        if p ~= player and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
            local hrp = p.Character.HumanoidRootPart
            local d = (player.Character.HumanoidRootPart.Position - hrp.Position).Magnitude
            if d < dist then
                closest = hrp
                dist = d
            end
        end
    end
    return closest
end

-- [ANA MOTOR: GÜCÜ DÜŞÜRÜLMÜŞ GİZLİ SPIN]
RunService.Heartbeat:Connect(function()
    if isEquipped and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        local HRP = player.Character.HumanoidRootPart
        local hum = player.Character:FindFirstChild("Humanoid")
        
        lockedTarget = findTarget()

        -- 1. HIZ SİSTEMİ
        if hum and hum.MoveDirection.Magnitude > 0 then
            HRP.AssemblyLinearVelocity = Vector3.new(
                hum.MoveDirection.X * 42,
                HRP.AssemblyLinearVelocity.Y,
                hum.MoveDirection.Z * 42
            )
        end

        -- 2. GİZLİ SPİN MANTIĞI (GÜÇ 2 SEVİYESİNDE)
        if lockedTarget then
            local distance = (HRP.Position - lockedTarget.Position).Magnitude
            
            -- HITBOX İÇİNDEYSE
            if distance <= 5.5 then 
                -- Fling gücü düşürüldü (Daha stabil ama etkili)
                HRP.AssemblyAngularVelocity = Vector3.new(0, 5000, 0) -- Eskiden 99999 idi, şimdi daha dengeli
                
                -- Görüntü Sabitleme
                local targetPos = Vector3.new(lockedTarget.Position.X, HRP.Position.Y, lockedTarget.Position.Z)
                HRP.CFrame = CFrame.lookAt(HRP.Position, targetPos)
            else
                -- UZAKTAYSA SIFIR SPIN
                HRP.AssemblyAngularVelocity = Vector3.new(0, 0, 0)
                
                -- Sadece kilitlen
                local targetPos = Vector3.new(lockedTarget.Position.X, HRP.Position.Y, lockedTarget.Position.Z)
                HRP.CFrame = CFrame.lookAt(HRP.Position, targetPos)
            end
            
            -- Kamera Odağı
            local camLook = CFrame.lookAt(camera.CFrame.Position, lockedTarget.Position)
            camera.CFrame = camera.CFrame:Lerp(camLook, 0.12)
        else
            HRP.AssemblyAngularVelocity = Vector3.new(0, 0, 0)
            local camCF = camera.CFrame
            local flatLook = Vector3.new(camCF.LookVector.X, 0, camCF.LookVector.Z)
            HRP.CFrame = CFrame.new(HRP.Position, HRP.Position + flatLook)
        end

        -- Görsel pürüzsüzlük için Render sıfırlama
        RunService.RenderStepped:Wait()
        if not lockedTarget or (HRP.Position - lockedTarget.Position).Magnitude > 5.5 then
            HRP.AssemblyAngularVelocity = Vector3.new(0, 0, 0)
        end
    end
end)

-- [VURUŞ MANTIĞI AYNI KALDI]
tool.Activated:Connect(function()
    if not canAttack or not player.Character or not lockedTarget then return end
    local HRP = player.Character.HumanoidRootPart
    
    if (HRP.Position - lockedTarget.Position).Magnitude < 12 then
        canAttack = false
        lockedTarget.AssemblyLinearVelocity = Vector3.new(0,0,0)
        
        local oldCF = HRP.CFrame
        HRP.CFrame = lockedTarget.CFrame * CFrame.new(0, 0, 1.2)
        HRP.AssemblyLinearVelocity = (HRP.CFrame.LookVector * 28000) + Vector3.new(0, 12000, 0)
        
        task.wait(0.06)
        HRP.CFrame = oldCF
        task.wait(0.5)
        canAttack = true
    end
end)

-- [EQUIP AYARLARI]
tool.Equipped:Connect(function() 
    isEquipped = true 
    player.Character.Humanoid.AutoRotate = false
end)

tool.Unequipped:Connect(function() 
    isEquipped = false 
    player.Character.Humanoid.AutoRotate = true
end)
